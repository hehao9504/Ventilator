{
  "name": "ventilator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "electron .",
    "electron:build": "electron-builder"	
  },
  "dependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "vite": "^6.3.5"
  },
  
  "main": "electron/main.cjs",
  "build": {
    "appId": "Ventilator.appname",
    "productName": "Ventilator",
    "directories": {
      "output": "dist_electron",
	  "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
	  "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
	"publish": null
  }
}
